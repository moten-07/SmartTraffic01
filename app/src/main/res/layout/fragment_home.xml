<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/fragment_home_scene"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.SmartTraffic0925Two">
    <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="360dp"
            android:layout_height="240sp"
            android:layout_marginVertical="48dp"
            app:cardElevation="0dp"
            android:elevation="0dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="36dp"
                android:textSize="24sp"
                android:textColor="@color/black"/>
        <TextView
                android:id="@+id/pm2P5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginTop="128dp"/>
        <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6300EE"
                android:textSize="64sp"
                android:layout_gravity="right|center"
                android:layout_marginEnd="24dp"/>
        <ImageView
                android:id="@+id/image_refresh"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_baseline_autorenew_24"
                android:layout_gravity="right|top"
                android:layout_margin="12dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_margin="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/traffic_map"
                android:contentDescription="@string/app_name"/>
        <View
                android:id="@+id/road_lt"
                android:layout_width="16dp"
                android:layout_height="0dp"
                android:background="@color/road_unobstructed"
                android:layout_marginVertical="36dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <View
                android:id="@+id/road_xy"
                android:layout_width="16dp"
                android:layout_height="0dp"
                android:background="@color/road_congestion"
                android:layout_marginVertical="36dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.27"/>
        <ImageView
                android:id="@+id/road_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic__road_ring"
                android:layout_margin="18dp"/>
        <TextView
                android:id="@+id/road_xy_name"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:ems="1"
                android:lineSpacingExtra="20dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/road_xy"
                app:layout_constraintBottom_toBottomOf="@id/road_xy"
                app:layout_constraintStart_toStartOf="@id/road_xy"
                app:layout_constraintEnd_toEndOf="@id/road_xy"/>
        <TextView
                android:id="@+id/road_lt_name"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:ems="1"
                android:lineSpacingExtra="20dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/road_lt"
                app:layout_constraintBottom_toBottomOf="@id/road_lt"
                app:layout_constraintStart_toStartOf="@id/road_lt"
                app:layout_constraintEnd_toEndOf="@id/road_lt"/>
        <TextView
                android:id="@+id/road_city_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="@id/road_city"
                app:layout_constraintStart_toStartOf="@id/road_city"
                app:layout_constraintEnd_toEndOf="@id/road_city"/>
        <TextView
                android:id="@+id/road_city_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="@id/road_city"
                app:layout_constraintStart_toStartOf="@id/road_city"
                app:layout_constraintEnd_toEndOf="@id/road_city"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>